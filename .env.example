# Server Configuration
PORT=3002

# Domain Whitelist (comma-separated)
ALLOWED_DOMAINS=localhost,127.0.0.1
TRUST_PROXY=true
LOG_SECURITY_EVENTS=true

# Environment
NODE_ENV=development

# Bearer Authentication (comma-separated list of valid tokens)
# Generate secure tokens using: openssl rand -base64 32
# Example: token1,token2,token3
BEARER_TOKENS=your_secret_bearer_token_here

# Database Configuration
# PostgreSQL credentials
POSTGRES_DB=price_tracker_db
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=postgres_password

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# For local development (outside Docker): use localhost
# For Docker: use 'postgres' as the host (set in docker-compose.yml)
DATABASE_URL=postgresql://postgres_user:postgres_password@localhost:5432/price_tracker_db

# Drizzle Gateway Configuration
# Master password for Drizzle Gateway web interface
# Generate secure password using: openssl rand -base64 32
DRIZZLE_GATEWAY_MASTERPASS=changeme_secure_password

# SMTP Configuration for Email Sending
# SMTP server hostname (e.g., smtp.gmail.com)
SMPT_HOST=smtp.gmail.com
# SMTP server port (e.g., 587 for TLS, 465 for SSL)
SMPT_PORT=587
# SMTP service name (e.g., gmail, outlook, yahoo)
SMPT_SERVICE=gmail
# Email address to send from
SMPT_MAIL=your-email@gmail.com
# Application-specific password for SMTP authentication
SMPT_APP_PASS=your-app-specific-password
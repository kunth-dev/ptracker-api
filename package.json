{
  "name": "price-tracker-api",
  "version": "1.0.0",
  "description": "Backend for crypto trading using external API",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "dev:production": "NODE_ENV=production tsx watch --env-file=.env.production src/server.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "bot",
    "crypto",
    "trading",
    "api"
  ],
  "author": "Kanstantsin Hrytsuk",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "es-toolkit": "^1.19.0",
    "express": "^4.19.2",
    "grammy": "^1.23.0",
    "helmet": "^7.1.0",
    "nodemailer": "^7.0.10",
    "postgres": "^3.4.7",
    "serverless-http": "^4.0.0",
    "stream": "^0.0.3",
    "typescript": "^5.9.3",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
